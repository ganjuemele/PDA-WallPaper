page {
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  --pic-width: 77.333vw;
  --pic-height: calc(var(--pic-width) * 1.782);
  --pic-margin: calc((88.27vw - var(--pic-width))/3);
}
swiper.container {
  /* margin-top: 96rpx; */
  min-height: 100vh;
  height: calc(100vh + 192rpx);
  /* height: auto; */
  /* padding-bottom: 320rpx; */
}
.pic-content {
  padding-top: 200rpx;
  height: calc(100vh + 192rpx);
}
/* .place-holder {
  height: 200rpx;
  position: fixed;
  content: '';
  clear: both;
} */
.pic {
  display: inline-flex;
  width: var(--pic-width);
  /* width: 77.333%; */
  height: var(--pic-height);
  margin-left: var(--pic-margin);
}
.op button {
  border: none;
  padding: 0;
  outline: none;
  line-height: unset;
}
button::after {
  border: none;
}

.op {
  display: inline-flex;
  flex-direction: column-reverse;
  margin: 0 var(--pic-margin);
  justify-content: flex-end;
  width: 24px;
  padding-bottom: 20rpx;
}

.pic-op {
  height: 41px;
  width: 24px;
}
.btn-dl {
  margin-top: 60rpx;
}
.stick {
  margin-right:16rpx;
  width: 8rpx;
  height: 36rpx;
}
.author {
  font-size: 18px;
  font-weight: bold;
}
.time {
  font-size: 12px;
  float: right;
  /* right: 300px;
  display: block;
  content: '';
  overflow: hidden; */
}
.info {
  width: var(--pic-width);
  margin-left: var(--pic-margin);
  color: #282A2C;
}
.pic-info {
  margin: 15px 0;
  height:18px;
}
